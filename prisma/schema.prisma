generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id     Int    @id @unique @default(autoincrement())
  task   String
  userId String
  before Int    @default(0)
  after  Int    @default(0)
  User   User   @relation(fields: [userId], references: [id])
}

model Project {
  id     Int    @id @unique @default(autoincrement())
  title  String
  userId String
  User   User   @relation(fields: [userId], references: [id])
  Task   Task[]
}

model Task {
  id        Int     @id @unique @default(autoincrement())
  task      String
  projectId Int
  userId    String
  project   Project @relation(fields: [projectId], references: [id])
  User      User    @relation(fields: [userId], references: [id])
}

model User {
  id       String      @id @default(uuid())
  email    String      @unique
  password String
  username String      @unique
  sessions SessionId[]
  todos    Todo[]
  Project  Project[]
  Task     Task[]
}

model SessionId {
  sessionId  String @id @default(uuid())
  expiration String
  userId     String
  User       User   @relation(fields: [userId], references: [id])

  @@index([userId], map: "SessionId_userId_fkey")
}
